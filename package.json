{
  "name": "easy-tailwindcss",
  "displayName": "Easy TailwindCss",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "easy-tailwindcss.helpMeWithTailwindCss",
        "title": "Help me with TailwindCss"
      },
      {
        "command": "easy-tailwindcss.helpMeWithCssAndInfo",
        "title": "Help me with Css and Information"
      },
      {
        "command": "easy-tailwindcss.askAPIkey",
        "title": "Add your API key",
        "icon": {
          "light": "media/light/add.svg",
          "dark": "media/dark/add.svg"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "first-view",
          "title": "Easy Tailwind",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "first-view": [
        {
          "type": "webview",
          "id": "easy-tailwindcss.connectionView",
          "name": "Connection"
        },
        {
          "type": "webview",
          "id": "easy-tailwindcss.tailwindCssHelperView",
          "name": "TailwindCSS Helper"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "easy-tailwindcss.askAPIkey",
          "when": "view == easy-tailwindcss.connectionView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@ai-sdk/google": "^0.0.30",
    "ai": "^3.2.37"
  }
}
